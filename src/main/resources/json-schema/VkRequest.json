{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "type": {
      "type": "string"
    },
    "object": {
      "type": "object",
      "properties": {
        "message": {
          "type": "object",
          "properties": {
            "text": {
              "type": "string"
            },
            "from_id": {
              "type": "integer"
            }
          },
          "required": ["text", "from_id"]
        }
      },
      "required": ["message"]
    }
  },
  "required": ["type", "object"]
}